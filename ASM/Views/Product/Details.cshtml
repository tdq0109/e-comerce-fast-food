@using ASM.Models.ViewModels.Product;
@model ProductDetailViewModel

<section class="container py-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Url.Content(Model.ImageURL)" class="img-fluid rounded" alt="@Model.ProductName" />
        </div>
        <div class="col-md-6">
            <h2>Tên: @Model.ProductName</h2>
            <p>Mô tả: @Model.Description</p>
            <p>Số lượng: @Model.Quantity</p>
            <p><strong>Giá:</strong> @Model.Price.ToString("N0") đ</p>
            <p><strong>Loại:</strong> @Model.CategoryName</p>
        </div>
    </div>
</section>

