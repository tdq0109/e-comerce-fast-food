@model List<ASM.Models.ViewModels.Product.ProductViewModel>

<h2 class="text-center mb-4">Kết quả tìm kiếm</h2>

<div class="row">
    @if (!Model.Any())
    {
        <div class="col-12 text-center">
            <p>Không tìm thấy sản phẩm phù hợp.</p>
        </div>
    }
    else
    {
        @foreach (var item in Model)
        {
            var tags = item.Tags?.ToLower() ?? "";
            var tagClass = tags.Replace(",", " ").Replace(";", " "); // nếu nhiều tags

            <div class="col-sm-6 col-lg-4 all @tagClass @(item.IsCombo ? "combo" : "")">
                <div class="box">
                    <div>
                        <div class="img-box">
                            <img src="@item.ImageURL" alt="@item.ProductName" />
                        </div>
                        <div class="detail-box">
                            <h5>@item.ProductName</h5>
                            <p>@item.Description</p>
                            <div class="options">
                                <h6>@item.Price.ToString("C0")</h6>
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductID" class="btn btn-primary btn-sm">Xem chi tiết</a>
                                <a href="#">
                                    <i class="fa fa-cart-plus"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
