@model IEnumerable<ASM.Models.ViewModels.Product.ProductViewModel>

    <section class="food_section layout_padding-bottom">
        <div class="container">
            <div class="heading_container heading_center">
                <h2>
                    Our Menu
                </h2>
            </div>

        <ul class="filters_menu">
            <li class="active" data-filter="*">All</li>
            @foreach (var category in (List<ASM.Models.Category>)ViewBag.Categories)
            {
                var filterClass = category.CategoryName.ToLower().Replace(" ", "").Replace("-", "");
                <li data-filter=".@filterClass">@category.CategoryName</li>
            }
        </ul>

            <div class="filters-content">
                <div class="row grid">
                @foreach (var item in Model)
                {
                    var tags = item.Tags?.ToLower() ?? "";
                    var tagClass = tags.Replace(",", " ").Replace(";", " "); // nếu nhiều tags

                    <div class="col-sm-6 col-lg-4 all @tagClass @(item.IsCombo ? "combo" : "")">
                        <div class="box">
                            <div>
                                <div class="img-box">
                                    <img src="@item.ImageURL" alt="@item.ProductName" />
                                </div>
                                <div class="detail-box">
                                    <h5>@item.ProductName</h5>
                                    <p>@item.Description</p>
                                    <div class="options">
                                        <h6>@item.Price.ToString("C0")</h6>
                                        <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductID" class="btn btn-primary btn-sm">Xem chi tiết</a>
                                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline">
                                            <input type="hidden" name="productId" value="@item.ProductID" />
                                            <button type="submit" class="btn btn-link p-0" title="Thêm vào giỏ">
                                                <i class="fa fa-cart-plus"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                </div>
            </div>
            <div class="btn-box">
                <a href="">
                    View More
                </a>
            </div>
        </div>
    </section>

    <!-- end menu section -->
<!-- Section: Combo -->
<section class="food_section layout_padding-bottom bg-light">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>Combo hấp dẫn</h2>
        </div>

        <div class="row">
            @foreach (var combo in (List<ComboViewModel>)ViewBag.Combos)
            {
                <div class="col-sm-6 col-lg-4 mb-4">
                    <div class="box p-3 border rounded bg-white shadow-sm">
                        <div class="img-box">
                            <img src="@combo.ImageUrl" class="img-fluid" alt="@combo.ComboName" />
                        </div>
                        <div class="detail-box mt-2">
                            <h5>@combo.ComboName</h5>
                            <p>@combo.Description</p>
                            <div class="options">
                                <h6>@combo.Price.ToString("C0")</h6>
                                <a asp-controller="Combo" asp-action="Details" asp-route-id="@combo.ComboID" class="btn btn-warning btn-sm">Xem chi tiết combo</a>
                                <form asp-controller="Cart" asp-action="AddComboToCart" method="post" class="d-inline">
                                    <input type="hidden" name="comboId" value="@combo.ComboID" />
                                    <button type="submit" class="btn btn-link p-0">
                                        <i class="fa fa-cart-plus"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="btn-box mt-4">
            <a href="#">Xem thêm combo</a>
        </div>
    </div>
</section>
<!--End Section: Combo -->

