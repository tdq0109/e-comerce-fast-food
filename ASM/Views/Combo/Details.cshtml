@using ASM.Models.ViewModels.Combo
@model ComboDetailViewModel


<section class="container py-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.ComboName" />
        </div>
        <div class="col-md-6">
            <h2>Tên: @Model.ComboName</h2>
            <p>Mô tả: @Model.Description</p>
            <p><strong>Giá:</strong> @Model.Price.ToString("N0") đ</p>
        </div>
    </div>
</section>

