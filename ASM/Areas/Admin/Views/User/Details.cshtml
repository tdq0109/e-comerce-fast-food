@model ASM.Models.User

@{
    ViewData["Title"] = "Chi tiết người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>@ViewData["Title"]</h2>
<hr />

<div class="card">
    <div class="card-header">
        <h3>@(string.IsNullOrEmpty(Model.FullName) ? "null" : Model.FullName)</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Email) ? "null" : Model.Email)</dd>

            <dt class="col-sm-3">Số điện thoại</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Phone) ? "null" : Model.Phone)</dd>

            <dt class="col-sm-3">Địa chỉ</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Address) ? "null" : Model.Address)</dd>

            <dt class="col-sm-3">Ngày sinh</dt>
            <dd class="col-sm-9">@(Model.DateOfBirth.HasValue ? Model.DateOfBirth.Value.ToString("dd/MM/yyyy") : "null")</dd>

            <dt class="col-sm-3">Giới tính</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Gender) ? "null" : Model.Gender)</dd>

            <dt class="col-sm-3">Quyền</dt>
            <dd class="col-sm-9">@((Model.Role == ASM.Models.UserRole.Admin) ? "Admin" : "Khách hàng")</dd>

            <dt class="col-sm-3">Trạng thái</dt>
            <dd class="col-sm-9">@((Model.IsActive) ? "Hoạt động" : "Không hoạt động")</dd>

            <dt class="col-sm-3">Ngày tạo</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</dd>

            <dt class="col-sm-3">Avatar</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                {
                    <img src="@Model.AvatarUrl" alt="Avatar" style="max-height: 150px;" />
                }
                else
                {
                    <span>null</span>
                }
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn btn-secondary">Quay lại</a>
        <a asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@Model.UserID" class="btn btn-primary">Sửa</a>
    </div>
</div>
