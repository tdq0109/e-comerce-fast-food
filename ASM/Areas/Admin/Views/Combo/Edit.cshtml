@model ASM.Models.ViewModels.Combo.ComboEditViewModel
@{
    ViewData["Title"] = "Cập nhật Combo";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-6">

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="ComboName"></label>
                <input asp-for="ComboName" class="form-control" />
                <span asp-validation-for="ComboName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" type="number" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <!-- Trạng thái -->
            <div class="form-group">
                <label asp-for="IsAvailable" class="control-label">Trạng thái</label>
                <select asp-for="IsAvailable" class="form-control">
                    <option value="true">Hoạt động</option>
                    <option value="false">Hết hàng</option>
                </select>
            </div>
            <!-- Ảnh hiện tại -->
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="form-group">
                    <label>Ảnh hiện tại:</label>
                    <br />
                    <img src="@Model.ImageUrl" alt="Ảnh combo" style="max-width:150px; border: 1px solid #ccc; padding: 5px;" />
                </div>
            }

            <!-- Ảnh mới -->
            <div class="form-group">
                <label asp-for="Image" class="control-label">Ảnh mới:</label>
                <input asp-for="Image" class="form-control" type="file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <h4>Sản phẩm trong Combo</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Số lượng</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.ItemsCombo.Items.Count; i++)
                    {
                        <tr>
                            <td>
                                <select asp-for="ItemsCombo.Items[@i].ProductID" class="form-control" asp-items="ViewBag.Products">
                                    <option value="">-- Chọn sản phẩm --</option>
                                </select>
                            </td>
                            <td>
                                <input asp-for="ItemsCombo.Items[@i].Quantity" class="form-control" type="number" min="1" />
                            </td>
                            <td>
                                <button type="submit" name="action" value="remove"
                                        formaction="@Url.Action("Edit", new { removeIndex = i })"
                                        class="btn btn-danger">
                                    -
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- Nút -->
            <div class="form-group mt-3">
                <button type="submit" name="action" value="add" class="btn btn-primary">+ Thêm sản phẩm</button>
                <button type="submit" name="action" value="save" class="btn btn-success">💾 Cập nhật Combo</button>
                <a asp-area="Admin" asp-controller="Combo" asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>

        </form>
    </div>
</div>
