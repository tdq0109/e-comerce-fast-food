@model ASM.Models.Category
@{
    ViewData["Title"] = "Chi tiết danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>@ViewData["Title"]</h2>
<hr />
<div class="card">
    <div class="card-header">
        <h3>@(string.IsNullOrEmpty(Model.CategoryName) ? "null" : Model.CategoryName)</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Tên danh mục</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.CategoryName) ? "null" : Model.CategoryName)</dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="btn btn-secondary">Quay lại</a>
        <a asp-area="Admin" asp-controller="Categories" asp-action="Edit" asp-route-id="@Model.CategoryID" class="btn btn-primary">Sửa</a>
    </div>
</div>
