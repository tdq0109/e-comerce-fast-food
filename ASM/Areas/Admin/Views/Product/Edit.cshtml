@model ASM.Models.ViewModels.Product.ProductEditViewModel
@{
    ViewData["Title"] = "Cập nhật sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-6">

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Tên sản phẩm -->
            <div class="form-group">
                <label asp-for="ProductName" class="control-label">Tên sản phẩm</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <!-- Mô tả -->
            <div class="form-group">
                <label asp-for="Description" class="control-label">Mô tả</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Giá -->
            <div class="form-group">
                <label asp-for="Price" class="control-label">Giá</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label">Số lượng</label>
                <input asp-for="Quantity" class="form-control" type="number"/>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <!-- Danh mục -->
            <div class="form-group">
                <label asp-for="CategoryID" class="control-label">Danh mục</label>
                <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.Categories">
                    <option value="">-- Chọn danh mục --</option>
                </select>
                <span asp-validation-for="CategoryID" class="text-danger"></span>
            </div>

            <!-- Trạng thái -->
            <div class="form-group">
                <label asp-for="IsAvailable" class="control-label">Trạng thái</label>
                <select asp-for="IsAvailable" class="form-control">
                    <option value="true">Có sẵn</option>
                    <option value="false">Hết hàng</option>
                </select>
            </div>

            <!-- Ảnh hiện tại -->
            @if (!string.IsNullOrEmpty(Model.ImageURL))
            {
                <div class="form-group">
                    <label>Ảnh hiện tại:</label>
                    <br />
                    <img src="@Model.ImageURL" alt="Ảnh sản phẩm" style="max-width:150px; border: 1px solid #ccc; padding: 5px;" />
                </div>
            }

            <!-- Ảnh mới -->
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label">Ảnh mới:</label>
                <input asp-for="ImageFile" class="form-control" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <!-- Nút -->
            <div class="form-group mt-3">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
                <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>

        </form>
    </div>
</div>
